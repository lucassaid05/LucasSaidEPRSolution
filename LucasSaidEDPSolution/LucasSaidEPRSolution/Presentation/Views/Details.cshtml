@model Domain.Model.Poll

<h2>Vote in Poll</h2>

<div>
    <h3>@Model.Title</h3>

    <form method="post" asp-action="Vote" asp-route-id="@Model.Id">
        <div>
            <input type="radio" name="selectedOption" value="1" id="option1" />
            <label for="option1">@Model.Option1Text</label>
        </div>
        <div>
            <input type="radio" name="selectedOption" value="2" id="option2" />
            <label for="option2">@Model.Option2Text</label>
        </div>
        <div>
            <input type="radio" name="selectedOption" value="3" id="option3" />
            <label for="option3">@Model.Option3Text</label>
        </div>

        <button type="submit">Submit Vote</button>
    </form>
</div>
